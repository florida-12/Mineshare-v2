            font-size: 14px;
            font-weight: 500;
            margin-top: 5px;
            margin-left: 3px;
        }

        .tournament-card .status-players .icon i {
            font-size: 10px;
        }

        .tournament-card .status-false {
            position: absolute;
            top: 0%;
            left: 50%;
            transform: translate(-50%, -100%);
            background: #EA4335;
            border-radius: 6px 6px 0 0;
            color: #fff;
            font-size: 14px;
            padding-top: 1px;
            padding-left: 15px;
            padding-right: 15px;
            padding-bottom: 2px;
