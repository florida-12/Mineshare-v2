        .tournament-card .status-true {
            position: absolute;
            top: 0%;
            left: 100px;
            transform: translate(-50%, -100%);
            background: #0F9D58;
            border-radius: 6px 6px 0 0;
            padding-top: 1px;
            padding-left: 15px;
            padding-right: 15px;
            padding-bottom: 2px;
        }

        .tournament-card .status-true .title {
            display: inline-flex;
            color: #fff;
            font-size: 14px;
            font-weight: 500;
            text-transform: none;
            margin-top: 0;
            margin-bottom: 0;
        }

        .tournament-card .status-players {
            position: absolute;
            top: 0%;
            left: 192px;
            transform: translate(-50%, -100%);
            background: #0F9D58;
            border-radius: 6px 6px 0 0;
            padding-top: 1px;
            padding-left: 10px;
            padding-right: 10px;
            padding-bottom: 2px;
